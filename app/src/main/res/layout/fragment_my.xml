<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#32c6eb">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/my_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:padding="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/my_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/my_snumber"
        android:layout_toRightOf="@+id/my_head"
        android:text="txx"/>

    <TextView
        android:id="@+id/my_snumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018210453"
        android:layout_toRightOf="@+id/my_head"
        android:layout_alignBottom="@+id/my_head"
        android:layout_marginBottom="40dp"/>


    <Button
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/my_head"
        android:layout_marginBottom="40dp" />
</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#32c6eb"
        android:padding="10dp">

    <include
        layout="@layout/item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/chuqinglv"/>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:layout_toRightOf="@+id/chuqinlv"
        android:layout_below="@+id/my_head"
        android:padding="20dp"
        android:layout_marginTop="10dp"/>

        <include
            layout="@layout/item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/chidao"/>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:layout_toRightOf="@+id/chidao"
        android:layout_below="@+id/my_head"
        android:padding="20dp"
        android:layout_marginTop="10dp"/>


        <include
            layout="@layout/item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/qingjia"/>
    </LinearLayout>


   <com.google.android.material.bottomnavigation.BottomNavigationView
       android:id="@+id/my_tablayout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:menu="@menu/my_meun"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/my_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>